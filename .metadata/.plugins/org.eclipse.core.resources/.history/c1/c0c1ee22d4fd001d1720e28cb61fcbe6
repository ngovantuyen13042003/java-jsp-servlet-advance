package st.nvt.model;

import java.sql.Timestamp;
import java.text.ParseException;
import java.text.SimpleDateFormat;


import lombok.Getter;
import lombok.ToString;

@Getter
@ToString
public class GraduateModel {
	private String identityCardNumber;
	private String idSchool;
	private String idMajor;
	private String graduateType;
	private Timestamp graduateDate;
	private String graduateDegree;
	public void setIdentityCardNumber(String identityCardNumber) {
		this.identityCardNumber = identityCardNumber;
	}
	public void setIdSchool(String idSchool) {
		this.idSchool = idSchool;
	}
	public void setIdMajor(String idMajor) {
		this.idMajor = idMajor;
	}
	public void setGraduateType(String graduateType) {
		this.graduateType = graduateType;
	}
	 public void setMyTimestamp(String timestampString){
	        try {
	            SimpleDateFormat dateFormat = new SimpleDateFormat("dd/MM/yyyy");
	            java.util.Date parsedDate = dateFormat.parse(timestampString);
	            this.graduateDate = new Timestamp(parsedDate.getTime());
	            
	        } catch (ParseException e) {
	            e.printStackTrace();
	        }
	    }
	public void setGraduateDegree(String graduateDegree) {
		this.graduateDegree = graduateDegree;
	}
	
}
